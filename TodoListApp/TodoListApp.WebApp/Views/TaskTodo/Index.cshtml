@model List<TaskTodoWebApiModel>

@{
    ViewData["Title"] = "Görevlerim";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container container-custom">

    <div class="text-center mb-4">
        <h2 class="text-white">
            <i class="bi bi-list-check"></i> Görev Listem
        </h2>
        <p class="text-muted">Aşağıda, seçtiğiniz yapılacaklar listesine ait görevleri görebilirsiniz.</p>
    </div>


    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            Bu listeye ait henüz bir görev eklenmemiş.
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <a href="/TaskTodo/Index/@item.Id" class="text-decoration-none">
                <div class="card todo-card">
                    <div class="card-body d-flex gap-3 align-items-start">
                        <div class="todo-checkbox"></div>
                        <div>
                            <div class="todo-title">@item.Title</div>
                            <div class="todo-description">@item.Description</div>
                        </div>
                    </div>
                </div>
            </a>
        }
    }
</div>

<style>
    body {
        background-color: #1c1c2c;
        font-family: 'Segoe UI', sans-serif;
    }

    .todo-card {
        border: none;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        background-color: transparent;
        color: white;
        padding: 15px 0;
        transition: background-color 0.3s ease;
    }

        .todo-card:hover {
            background-color: rgba(255, 255, 255, 0.05);
        }

    .todo-checkbox {
        width: 22px;
        height: 22px;
        border-radius: 50%;
        border: 2px solid #ffffff;
        margin-top: 6px;
        flex-shrink: 0;
    }

    .todo-title {
        font-weight: 600;
        font-size: 18px;
    }

    .todo-description {
        font-size: 15px;
        color: #cccccc;
    }

    .container-custom {
        max-width: 600px;
        margin: 60px auto;
    }
</style>
